<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/item"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/image"
                android:layout_width="68dp"
                android:layout_height="match_parent"
                android:maxHeight="100dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"/>

        <FrameLayout
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            <flandre.cn.novel.ui.view.MultiPaintTextView
                    android:id="@+id/top_intro"
                    android:paddingBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <flandre.cn.novel.ui.view.CircularProgressView
                        android:id="@+id/progress"
                        app:backWidth="3dp"
                        app:progWidth="3dp"
                        android:layout_width="30dp"
                        android:layout_height="30sp"/>

                <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/percent"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:text="观看时间"/>

                <TextView
                        android:id="@+id/year_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <View
                            android:id="@+id/sep_left"
                            android:layout_width="1dp"
                            android:layout_height="86dp"
                            android:layout_marginLeft="8dp"
                            android:background="#000"/>

                        <TextView
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="2dp"
                                android:textAlignment="textEnd"
                                android:id="@+id/date_left"
                                android:textSize="14sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/finish"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:text="没有看完"/>

                <TextView
                        android:id="@+id/year_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:text="####年"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <View
                            android:id="@+id/sep_right"
                            android:layout_width="1dp"
                            android:layout_height="86dp"
                            android:layout_marginLeft="8dp"
                            android:background="#000"/>

                    <TextView
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="2dp"
                            android:textAlignment="textEnd"
                            android:id="@+id/date_right"
                            android:textSize="14sp"
                            android:text="##月\n##日\n##时\n##分"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <flandre.cn.novel.ui.view.MultiPaintTextView
                    android:id="@+id/bottom_intro"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
                android:layout_gravity="bottom|right"
                android:id="@+id/status"
                android:layout_marginRight="10dp"
                android:gravity="right|bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

    </FrameLayout>
</LinearLayout>